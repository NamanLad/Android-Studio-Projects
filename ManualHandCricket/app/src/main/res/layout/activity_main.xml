<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_marginTop="00dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your number"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer number"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/des_tv_yourNumber"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text=""
            android:textColor="#000"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/des_tv_computerNumber"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text=""
            android:textColor="#000"
            android:textSize="40sp" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="40dp">

    <Button
        android:id="@+id/des_btn_0"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0" />

    <Button
        android:id="@+id/des_btn_1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1" />

    <Button
        android:id="@+id/des_btn_2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2" />

    <Button
        android:id="@+id/des_btn_3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"/>

    <Button
        android:id="@+id/des_btn_4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"/>

    <Button
        android:id="@+id/des_btn_5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/des_btn_6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_marginLeft="25dp"/>

        <Button
            android:id="@+id/des_btn_7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="7"/>

        <Button
            android:id="@+id/des_btn_8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="8"/>

        <Button
            android:id="@+id/des_btn_9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="9"/>

        <Button
            android:id="@+id/des_btn_10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Score : "
            android:layout_marginTop="20sp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/des_tv_score"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0"
            android:textColor="#000"
            android:textSize="60sp" />


    </LinearLayout>

    <Button
        android:id="@+id/des_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Next"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/des_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Target is : "
            android:textSize="30sp" />



        <TextView
            android:id="@+id/des_tv_targetis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textSize="30sp" />




    </LinearLayout>


</LinearLayout>